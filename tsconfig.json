{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "lib": ["es6"],
    "jsx": "react-native",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": false,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "components": ["./src/components"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "dist", "lib"]
}
